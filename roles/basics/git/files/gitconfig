[include]
  path=~/.gitconfig.local

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  bra = branch -avvv
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  up = "!git fetch && git rebase origin/`git rev-parse --abbrev-ref HEAD` && git remote prune origin"

[color]
  ui = true

[credential]
  helper = cache --timeout=28800

[push]
  default = current

[core]
  autocrlf = input
  editor = /usr/bin/vim
  commentchar = ~

