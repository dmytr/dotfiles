[include]
  path=~/.gitconfig.local

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  bra = branch -avvv
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p

[color]
  ui = true

[credential]
  helper = cache --timeout=28800

[push]
  default = simple

[core]
  autocrlf = input
  editor = /usr/bin/vim
